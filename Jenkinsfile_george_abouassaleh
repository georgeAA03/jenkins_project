pipeline {

    agent any

    environment { VIRTUAL_ENV = 'venv' }

    stages {
        stage('Setup') {
            steps {
                script {
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}\\Scripts\\activate")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }
                    bat "call ${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }

        stage('Lint') {
            steps {
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
            }
        }

        stage('Test') {
            steps {
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && python -m pytest"
            }
        }

        stage('Coverage') {   
            steps {
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest"
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && coverage report -m"
                bat "call ${VIRTUAL_ENV}\\Scripts\\activate && coverage html"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
